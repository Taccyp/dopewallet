<!DOCTYPE html>
<html>
<head> 

</head>
<body>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Brand</th>
      <th>Expires</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.number %></td>
        <td><%= card.brand %></td>
        <td>Expires: <%= "#{card.exp_month}/#{card.exp_year}" %></td>
        <td><%= link_to 'Show', card %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</body>
</html>