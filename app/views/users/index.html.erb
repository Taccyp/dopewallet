<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Cash balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.cash_balance %></td>
        <td><%= link_to 'Show', user %></td>
           <th><%= link_to 'Cards', user_cards_path(user) %></th>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sign-Up!', new_user_path %>
